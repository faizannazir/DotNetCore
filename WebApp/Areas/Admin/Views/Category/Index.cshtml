@model IEnumerable<CategoryDto>



<div class="container">
    <div id="toast-container"></div>
    <div class="row">
        <div class="col-6">
            <h1> Index </h1>
        </div>
        <div class="col-3 offset-3">
            <a onclick="CreateUpdateCategory()" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary">Create Category</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center" id="myTable">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>TotalOrders</th>
                            @*<th>Actions</th>*@
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.TotalOrders</td>
                @*                <td>
                                    <a onclick="CreateUpdateCategory('@item.Id')" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary mx-3 px-4">Edit</a>
                                    <a onclick="confirmDelete('@item.Id')" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                </td>*@
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>



<partial name="_Modal" />


@section Scripts
    {
    <!-- Toastr js-->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>

    <!-- SweetAlert2 JavaScript -->
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10.16.7/dist/sweetalert2.all.min.js"></script>

    <script src="/js/CategoryAjax.js" type="text/javascript"></script>

    <!-- DataTable JavaScript -->
    <script src="https://cdn.datatables.net/1.13.4/js/jquery.dataTables.min.js"></script>
    <script src="https://cdn.datatables.net/1.13.4/js/dataTables.bootstrap5.min.js"></script>

    <script src="/js/CategoryDataTable.js" type="text/javascript"></script>

    <script>
        $(document).ready(function () {
            Categories.InitializeCategoryDataTable('#myTable', [
                { className: "text-center", data: 'name', name: "name" },
                { className: "text-center", data: 'totalOrders', name: "totalOrders", },
            //], "/Admin/Category/GetPaginatedCategory", 'GET', undefined, undefined, 1);
            ], "/Admin/Category/GetAllCategoriesForView", 'GET', undefined, undefined, 1);
        });
    </script>


}