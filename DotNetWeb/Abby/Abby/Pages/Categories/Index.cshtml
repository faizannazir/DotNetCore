@page
@model Abby.Pages.Categories.IndexModel


<div class="container">
    <partial name="_TosterAlert"/>
    <div class="row">
       <div class="col-6 my-5">
           <h3> List of Categories </h3>
       </div>
       <div class="col-6 text-end my-5">
            <a class="btn-primary btn" asp-page="create"><i class="bi bi-plus-circle"></i> &nbsp Create New Category</a>
       </div>
    </div>

    <div class="row">
        <div class="col-12">
            <table class="table table-bordered table-striped">
                <thead>

                    <tr>
                        <th> Category Id</th>
                        <th> Category Name</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                        @foreach(var item in Model.Categories)
                        {
                        <tr>
                        <td> @item.Id</td>
                        <td> @item.Name</td>
                        <td>
                            <div class="w-75 btn-group" role="group">
                                <a asp-page="Edit" asp-route-id="@item.Id" 
                                class="btn btn-primary mx-3">
                                        <i class="bi bi-pencil"></i> &nbsp; Edit
                                </a>

                                <a asp-page="Delete" asp-route-id="@item.Id"
                                       class="btn btn-danger mx-3">
                                        <i class="bi bi-trash"></i> &nbsp; Delete
                                    </a>
                            </div>
                        </td>
                        </tr>
                        }
                </tbody>
            </table>
        </div>
    </div>
</div>