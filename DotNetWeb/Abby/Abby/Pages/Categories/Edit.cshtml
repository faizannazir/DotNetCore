@page
@model Abby.Pages.Categories.EditModel


<form method="post">
    <div class="border p-3 mt-4">
        <div class="row pb-2">
            <h3 class="text-primary pl-3"> Edit Category</h3>
        </div>
        <div class="mb-2">
            <input type="hidden" asp-for="Category.Id" />
            <label asp-for="Category.Name"></label>
            <input asp-for="Category.Name" class="form-control" />
            <span asp-validation-for="Category.Name" class="text-danger"></span>

        </div>
        <button type="submit" class="btn-primary btn my-2">Update</button>
    </div>
</form>


@* Validation Script Added *@
@section scripts
{
    @{
        <partial name ="_ValidationScriptsPartial"/>
    }
}
