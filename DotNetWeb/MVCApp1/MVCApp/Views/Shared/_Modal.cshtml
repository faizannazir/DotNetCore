<button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#studentModal" onclick="Register()">
    Add Student
</button>

<!-- Modal -->
<div class="modal fade" id="studentModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h1 class="modal-title fs-5" id="exampleModalLabel">Add Student Record</h1>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="guard_signup_form ">
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-primary">Save changes</button>
            </div>
        </div>
    </div>
</div>

<script>
    function Register() {
        $.ajax({
            type: 'Get',
            url: '/Products/Create/',
            success: function (response) {
                $(".guard_signup_form").html(response);
            },
            error: function (response) {

            }
        });
    }
</script>