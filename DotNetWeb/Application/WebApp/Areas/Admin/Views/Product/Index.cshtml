@model IEnumerable<ProductDto>


<div class="container">

    <div class="row">
        <div class="col-6">
            <h1> Index </h1>
        </div>
        <div class="col-3 offset-3">
            <a onclick="CreateUpdateProduct()" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary">Create Product</a>
        </div>
    </div>

    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Price</th>
                            <th>Image</th>
                            <th>Category</th>
                            <th class="col-3 "></th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Name</td>
                                <td>@item.Description</td>
                                <td>@item.Price</td>

                                <td><img src="@item.ImageUrl" class="rounded-circle img-thumbnail" style="width: 50px; height: 50px;" alt="@item.Name" /></td>
                                <td>@item.CategoryName</td>

                                <td>
                                    <a onclick="CreateUpdateProduct('@item.Id')" data-bs-toggle="modal" data-bs-target="#Modal" class="btn btn-primary mx-3 px-4">Edit</a>
                                    <a onclick="deleteProduct('@item.Id')" class="btn btn-danger" asp-route-id="@item.Id">Delete</a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>

<partial name="_Modal" />

@section Scripts
    {
     <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script src="/js/ProductAjax.js" type="text/javascript"></script>

}
