@model CategoryDto
@{
    Layout = null;
}

<div class="container">


    <div class="card">
        <div class="card-body">
            <div class="table-responsive">
                <table class="table table-striped table-bordered text-center">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Total Order</th>
                            <th class="col-3 "></th>
                        </tr>
                    </thead>
                    <tbody>

                            <tr>
                                <td>@Model.Name</td>
                                <td>@Model.TotalOrders</td>
                                <td>
                                    <form method="post">
                                    <a asp-action="AddUpdate" class="btn btn-primary mx-3 px-4" asp-route-id="@Model.Id">Edit</a>
                                    <input type="submit" class="btn btn-danger mx-3" asp-action="Delete" asp-route-id="@Model.Id">Delete</input>
                                    <a action="Delete" class="btn btn-primary" asp-route-id="@Model.Id">Back</a>
                                    </form>
                                </td>
                            </tr>

                    </tbody>

                </table>
            </div>
        </div>
    </div>
</div>