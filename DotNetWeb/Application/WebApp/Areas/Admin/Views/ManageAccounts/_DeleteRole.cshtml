@model RolesDto

<div class="card carousel-dark">
    <div class="card-body">
        <div class="card-title text-center mb-3">
            <h3>Delete Role</h3>
        </div>

        <div class="table-responsive">

            <table class="table table-bordered">
                <tr>
                    <th scope="row">Name</th>
                    <td>@Model.Name</td>
                   
                </tr>
                <tr>
                    <th scope="row">Description</th>
                    <td>@Model.Description</td>
                </tr>
                <tr>
                    <td colspan="2" class="text-center">
                        <form class="form-inline">
                            <input type="button" class="btn btn-danger mb-0" onclick="DeleteRolePost('@Model.Id')" value="Delete" />
                            <a class="btn btn-primary mb-0 mx-3 px-4" onclick="GetRolesList()">Back</a>
                        </form>
                    </td>
                </tr>

            </table>

            
        </div>

    </div>
</div>